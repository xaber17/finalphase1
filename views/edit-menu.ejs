<%- include('partials/header')%>
<body>
    
    <div class="container mt-5">
        <a href="/"><button type="button" class="btn btn-primary">Home</button></a>
    </div>
    <div class="container-fluid p-5">
        <h1 class="text-center">Edit Menu</h1>
        <form action="/menus/edit/<%= data.id %>" method="POST">
            <div class="form-group">
              <label>Name</label>
              <input value="<%= data.name %>" name="name" type="text" class="form-control" placeholder="e.g: Gado-Gado">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input value="<%= data.price %>"name="price" type="text" class="form-control" placeholder="e.g: 14500">
            </div>
            
            <button type="submit" class="btn btn-primary">Update Menu</button>
            <a href="/menus"><button type="button" class="btn btn-danger">Cancel</button></a>
        </form>
    </div>

</body>
</html>