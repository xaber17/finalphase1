<%- include('partials/header')%>
<body>
    
  <div class="container mt-5">
      <a href="/"><button type="button" class="btn btn-primary">Home</button></a>
  </div>
  <div class="container-fluid p-5">
    <h1 class="text-center"> Add Customer</h1>
        <form action="/customers/add" method="POST">
            <div class="form-group">
              <label>First Name</label>
              <input name="firstname" type="text" class="form-control" placeholder="e.g: Sudoku">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input name="lastname" type="text" class="form-control" placeholder="e.g: Kinkaku">
            </div>
            <div class="form-group">
              <label>Phone</label>
              <input name="phone" type="text" class="form-control" placeholder="e.g: 08123456789">
            </div>
           
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/customers"><button type="button" class="btn btn-danger">Cancel</button></a>
        </form>
    </div>

</body>
</html>